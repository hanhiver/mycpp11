{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build boost C++11",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${file}",
                "-pthread", 
                "-I /usr/local/include", 
                "-L /usr/local/lib"//, 
                //"-lboost_context"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run boost C++11",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "dependsOn": [
                "Build boost C++11"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Build C++11",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${file}",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run C++11",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "dependsOn": [
                "Build C++11"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Build C++17",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${file}",
                "-pthread",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run C++17",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "dependsOn": [
                "Build C++17"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Build C++17 Parallel",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-ltbb", 
                "-L/usr/local/lib",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${file}",
                "-pthread",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run C++17 Parallel",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "dependsOn": [
                "Build C++17 Parallel"
            ],
            "options": {
                "env": { "LD_LIBRARY_PATH":"/usr/local/lib:/usr/local/lib64" }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "env | grep LD"
        }
    ]
}